#TimeScaleToolbar {
	flex-direction: row;
	flex-grow: 1;
	position: absolute;
	bottom: 0;
	background-color: #333;
	padding: 4px 2px 4px 0px;
}

Label {
	margin-top: 1px;
	padding-left: 4px;
	padding-right: 4px;
}

Slider {
	flex-grow: 1;
	height: 18px;
}

FloatField {
	width: 40px;
	height: 18px;
}

Button {
	height: 19px;
	width: 24px;
	margin-top: 0px;
}

Button > VisualElement {
	background-image: resource("Refresh");
	align-self: center;
	width: 15px;
	height: 15px;
}